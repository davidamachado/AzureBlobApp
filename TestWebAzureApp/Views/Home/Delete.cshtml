@using TestWebAzureApp.Controllers;
@{
    ViewData["Title"] = "Delete Page";
}

<div class="row">
    <div class="col-4">
        <form asp-action="DeleteAction">
            <div class="form-group">
                <img src="@BlobController.GetUri(HomeController.Name)" class="rounded" height="400" />
            </div>
            <div>
                <p>@ViewData["File"]</p>
            </div>
            <div class="form-group">
                <a asp-action="Index" class="btn btn-outline-primary">Do Not Delete</a>
                <input type="hidden" value="@ViewData["File"]" id="fileName" name="fileName"/>
                <input type="submit" value="Confirm Delete" class="btn btn-outline-danger" />
            </div>
        </form>
    </div>
</div> 